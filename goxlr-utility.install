post_install() {
    udevadm control --reload-rules
    echo "You may need to replug your GoXLR before running the Daemon"
}

post_upgrade() {
    udevadm control --reload-rules
    echo "You may need to replug your GoXLR before running the Daemon"
}

post_remove() {
    udevadm control --reload-rules
}
