_depmod() {
	depmod $(uname -r)
}

post_install() {
	_depmod
	echo -e "Before using darling, you must to load \033[1mdarling-mach\033[0m kernel module."
}

post_upgrade() {
	_depmod
	echo -e "You must to reload \033[1mdarling-mach\033[0m kernel module to use new version."
}

post_remove() {
	_depmod
}
