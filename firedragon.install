msg() {
    ALL_OFF="\e[1;0m"
    BOLD="\e[1;1m"
    RED="${BOLD}\e[1;31m"
	local mesg=$1; shift
	printf "${RED}==>${ALL_OFF}${BOLD} ${mesg}${ALL_OFF}" "$@" >&2
}

post_install() {
    post_upgrade
}

post_upgrade() {
    msg "Firejail profiles are now present in firejail-git."
    echo ""
    msg "To use profile-sync-daemon add firedragon to ~/.config/psd/psd.conf"
    echo ""
    msg "Enjoy the Firedragon 🔥🐉"
    echo ""
}
