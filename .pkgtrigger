dependencypackages=(
    'vivaldi-snapshot-ffmpeg-codecs'
)

vivaldi_major_version=${pkgver%\.[0-9]*\.[0-9]*}
chrome_version=$(bsdtar -xOf "$pkgrepo/pool/$pkgbase-$pkgver-$pkgrel-x86_64.pkg.tar.xz" | strings | grep '^[0-9]\{2,\}\.[0-9]\+\.[0-9]\{4,\}\+\.[0-9]\+$')

pkgupdate=$(cat <<EOF
update_pkgver="$chrome_version"
update__vivaldi_major_version="$vivaldi_major_version"
EOF
)
