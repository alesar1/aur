[Unit]
Description=Radarr Service
After=syslog.target network.target

[Service]
User=radarr
Group=radarr
ExecStart=/usr/bin/mono --debug /usr/lib/radarr/Radarr.exe -nobrowser -data=/var/lib/radarr
Type=simple
TimeoutStopSec=20
KillMode=process
Restart=on-failure

[Install]
WantedBy=multi-user.target
