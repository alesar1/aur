post_install() {
	mkdir -p "$pkgdir/var/spool/roger"
	chmod 2770 "$pkgdir/var/spool/roger"
	chown root:lp "$pkgdir/var/spool/roger"

	echo To add the fax printer install cups and run the following command:
	echo
	echo "  lpadmin -p \"Roger-Router-Fax\" -E -v roger-cups:/ -P /usr/share/cups/model/roger-fax.ppd"
	echo
	echo Users have to be in the group \"lp\" to use this printer. Run:
	echo
	echo "  gpasswd --add [username] lp"
}

post_upgrade() {
	post_install
}
