post_install()
{

	if which pycompile >/dev/null 2>&1; then
		pycompile -p cajarename 
	fi

}

post_upgrade()
{
	post_install
}

pre_remove()
{

	if which pyclean >/dev/null 2>&1; then
		pyclean -p cajarename 
	else
		pacman -Qql cajarename | grep '\.py$' | while read file
		do
			rm -f "${file}"[co] >/dev/null
	  	done
	fi
}
