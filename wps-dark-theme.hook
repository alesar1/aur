[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = wps-office

[Action]
Description = Force wps-office using gtk style with Adwaita, to avoid issues under dark themes
When = PostTransaction
Exec = /usr/bin/sh -c "sed -i 's,Exec=,& GTK2_RC_FILES=/usr/share/gtk-2.0/gtkrc ,' /usr/share/applications/wps-office-{wps,wpp,et}.desktop; sed -i 's,%f,-style=gtk &,' /usr/share/applications/wps-office-{wps,wpp,et}.desktop"
Depends = wps-office

