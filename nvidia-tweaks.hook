[Trigger]
Operation=Install
Operation=Upgrade
Operation=Remove
Type=Package
Target=nvidia-tweaks

[Action]
Description=Update Nvidia module in initcpio (for DRM KMS)
When=PostTransaction
NeedsTargets
Exec=/bin/sh -c 'if command -v mkinitcpio >/dev/null 2>&1; then mkinitcpio -P; else printf "\\033[31m mkinitcpio not found, please update initramfs manually\\033[0m\\n"; fi'
