post_install() {
        dkms install corefreq-git/${1%%-*}
        echo 'modprobe or insmod the kernel module corefreqk.ko before starting the daemon corefreqd.service then run the client corefreq-cli'
}

pre_upgrade() {
        pre_remove ${2%%-*}
}

post_upgrade() {
        post_install ${1%%-*}
}

pre_remove() {
        dkms remove corefreq-git/${1%%-*} --all
}
