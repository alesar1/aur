# Colored makepkg-like function
note() {
    printf "${blue}==>${yellow} NOTE:${bold} $1${all_off}\n"
}

all_off="$(tput sgr0)"
bold="${all_off}$(tput bold)"
blue="${bold}$(tput setaf 4)"
yellow="${bold}$(tput setaf 3)"

post_install() {
    note "To enable MP3 support execute the following commands as root:"
    echo "ln -s /usr/bin/ffmpeg /usr/local/bin/avconv"
    echo "ln -s /usr/bin/ffprobe /usr/local/bin/avprobe"
}

post_upgrade() {
    post_install
}
