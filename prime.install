#there are one config file, provided by nvidia

NAME="X11/xorg.conf.d/10-nvidia.conf"

post_install() {
	echo "Creating /etc/${NAME} ..."
	cp -v /usr/share/${NAME} /etc/${NAME}
}

post_upgrade() {
	post_install
}

post_remove() {
	echo "Removing /etc/X11/xorg.conf.d/10-nvidia.conf ..."
	rm -v /etc/${NAME}
}
