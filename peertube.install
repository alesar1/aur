post_install() {
  getent passwd peertube > /dev/null ||
    useradd -rmd /var/lib/peertube peertube
  chown -R peertube:peertube /var/lib/peertube
  chown -R peertube:peertube /etc/peertube
}

post_upgrade() {
  post_install
}

post_remove() {
  echo 'You may want to to remove the PeerTube user.'
}
