post_remove() {
    paths=(/etc/metronome /var/lib/metronome /var/log/metronome)

    first=true
    for path in ${paths[@]}; do
        if [ -d $path ]; then
            if $first; then
                first=false
                echo "==> Leftover Paths:"
            fi
            echo "==> $path"
        fi
    done
}
