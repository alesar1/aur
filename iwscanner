#!/bin/sh

# Simple iwscanner launch script

CMD=/usr/share/iwscanner/iwscanner.py

if [ "$(id -ru)" -eq 0 ]; then
   # Already root user
   exec $CMD
fi

GKSU=/usr/bin/gksu
KDESU=/usr/bin/kdesu
if [ -e "$GKSU" ]; then
   exec $GKSU $CMD
elif [ -e "$KDESU" ]; then
   exec $KDESU -c $CMD
else
   printf "Unable to find suitable su application, please install gksu or kde-cli-tools (kdesu)\n" 1>&2
fi

