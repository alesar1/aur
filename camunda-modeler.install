post_install() {
	echo 'Registering XDG entries for Camunda Modeler...'
	/bin/sh -c "/opt/camunda-modeler/support/xdg_register.sh"
}

post_upgrade() {
	post_install
}

pre_remove() {
	echo 'Unregistering XDG entries for Camunda Modeler...'
	/bin/sh -c "/opt/camunda-modeler/support/xdg_unregister.sh"
}
