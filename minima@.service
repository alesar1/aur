[Unit]
Description=Minima on port %I
After=syslog.target network.target

[Service]
User=minima
Type=simple
ExecStart=/usr/bin/java -Xmx1G -jar /usr/bin/minima.jar -daemon -port %I -data /var/lib/minima/data-%I -conf /etc/minima/minima-%I.conf
Restart=always
RestartSec=20

[Install]
WantedBy=multi-user.target
