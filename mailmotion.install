post_install() {
    pkgname=mailmotion

    # Fixing membership
    chown http: /var/log/$pkgname
    chown -R http: /etc/$pkgname

    true
}

post_upgrade() {
    chown http: /var/log/$pkgname
    chown -R http: /etc/$pkgname

    echo "You must update your config file !"
    
    true
}

pre_remove() {
    true
}
