_bc_user=bitcoin
_bc_group=bitcoin

post_install() {
  chown -R $_bc_user:$_bc_group /etc/bitcoin /srv/bitcoin
  printf "%b\n" "$bitcoin"
}

post_upgrade() {
  chown -R $_bc_user:$_bc_group /etc/bitcoin /srv/bitcoin
  printf "%b\n" "$bitcoin"
}

post_remove() {
  rm -rf /srv/bitcoin
}

read -d '' bitcoin <<'EOF'
########################################################################
########################################################################
##                                                                    ##
##  Bitcoin Core                                                      ##
##  ____________                                                      ##
##                                                                    ##
