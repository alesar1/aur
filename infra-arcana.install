post_install() {
  xdg-icon-resource forceupdate --theme hicolor &> /dev/null
  echo 'Installed. Run infra-arcana to launch.'
}

post_upgrade() {
  post_install "$1"
}

post_remove() {
  echo 'To remove application data such as saved games, delete ~/.local/share/infra_arcana'
}

