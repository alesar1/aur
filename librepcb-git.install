post_install() {
    echo "Update icon cache..."
    xdg-icon-resource forceupdate --theme hicolor &>/dev/null
    echo "Update mime database..."
    update-mime-database usr/share/mime &> /dev/null
    echo "Update desktop database..."
    update-desktop-database -q
}

post_upgrade() {
    post_install "$1"
}

post_remove() {
    post_install "$1"
}
