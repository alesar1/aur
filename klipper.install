post_install() {
    echo "Before launching, copy one of example configs in /usr/share/klipper/examples/ to /etc/klipper/klipper.cfg and adjust it to suit your printer"
}

post_upgrade() {
    post_install
}

post_remove() {
    echo "Removing generated files"
    [ -e /usr/local/bin/klipper_mcu ] && rm -v /usr/local/bin/klipper_mcu
    [ -e /usr/lib/klipper/out ] && rm -rv /usr/lib/klipper/out
    [ -e /usr/lib/klipper/.config ] && rm -v /usr/lib/klipper/.config
}
