[Unit]
Description=Blendnet Manager
After=syslog.target
After=network.target

[Service]
User=blendnet
Group=blendnet
Type=simple
KillSignal=SIGKILL
WorkingDirectory=~
ConfigurationDirectory=blendnet
StateDirectory=blendnet
ExecStartPre=/usr/share/blender/%v/scripts/addons/blendnet/blendnet-validate manager
ExecStart=/usr/bin/blender -b -noaudio -P /usr/share/blender/%v/scripts/addons/blendnet/manager.py
Restart=always
RestartSec=2s

[Install]
WantedBy=multi-user.target
