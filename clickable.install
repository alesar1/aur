post_install() {
  
  echo "Add clickable to PATH"
  echo "export PATH=\$PATH:\/opt/clickable" >> /home/$USER/.$(echo ${SHELL##*/})rc
  source /home/$USER/.$(echo ${SHELL##*/})rc
  echo "Configure docker for clickable"
  clickable setup-docker
  
}

post_upgrade() {

  sed -n -i '/clickable/!p' /home/$USER/.$(echo ${SHELL##*/})rc
  echo "export PATH=\$PATH:\/opt/clickable" >> /home/$USER/.$(echo ${SHELL##*/})rc
  source /home/$USER/.$(echo ${SHELL##*/})rc

}

post_remove() {

  sed -n -i '/clickable/!p' /home/$USER/.$(echo ${SHELL##*/})rc
  source /home/$USER/.$(echo ${SHELL##*/})rc

}

