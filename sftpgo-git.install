post_install() {
  setcap cap_net_bind_service=+ep /usr/bin/sftpgo
}

post_upgrade() {
  setcap cap_net_bind_service=+ep /usr/bin/sftpgo
}

pre_remove() {
  systemctl stop sftpgo.service
  cat <<EOF
==> Leftover files may reside in /var/lib/sftpgo and /etc/sftpgo
==> If you remove them, you may also want to remove user and 
==> group 'sftpgo'
EOF
}
