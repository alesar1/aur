diff --git a/CMakeLists.txt b/CMakeLists.txt
index a1412d8..201a4e5 100644
--- a/CMakeLists.txt
+++ b/CMakeLists.txt
@@ -471,18 +471,6 @@ if(HAVE_PTHREAD)
   set(poppler_LIBS ${poppler_LIBS} ${CMAKE_THREAD_LIBS_INIT})
 endif()
 
