diff --git a/CMakeLists.txt b/CMakeLists.txt
index cdfe7795..001425ce 100644
--- a/CMakeLists.txt
+++ b/CMakeLists.txt
@@ -483,24 +483,6 @@ if(TIFF_FOUND)
   set(poppler_LIBS ${poppler_LIBS} ${TIFF_LIBRARIES})
 endif()
 
