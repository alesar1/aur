_reload_udev_rules() {
    udevadm control --reload
}

_print_install_add_step() {
    echo 'You may run udevadm trigger in order to apply newly installed udev'   \
         'rules to plugged Mooltipass'
}

post_install() {
    _reload_udev_rules
    _print_install_add_step
}

post_upgrade() {
    _reload_udev_rules
    _print_install_add_step
}

post_remove() {
    _reload_udev_rules
}
