Subject: [PATCH 2/3] Makefile: prepend to build flags

---
 Makefile_plugin.common | 6 +++---
 1 file changed, 3 insertions(+), 3 deletions(-)

diff --git a/Makefile_plugin.common b/Makefile_plugin.common
index 940c29e..3c1f32b 100644
--- a/Makefile_plugin.common
+++ b/Makefile_plugin.common
@@ -38,9 +38,9 @@
 # |-- example2-plugin
 # |-- ...
 CXX ?= $(shell yosys-config --cxx)
-CXXFLAGS ?= $(shell yosys-config --cxxflags) #-DSDC_DEBUG
-LDFLAGS ?= $(shell yosys-config --ldflags)
-LDLIBS ?= $(shell yosys-config --ldlibs)
+CXXFLAGS := $(shell yosys-config --cxxflags) $(CXXFLAGS) #-DSDC_DEBUG
+LDFLAGS := $(shell yosys-config --ldflags) $(LDFLAGS)
+LDLIBS := $(shell yosys-config --ldlibs) $(LDLIBS)
 PLUGINS_DIR ?= $(DESTDIR)$(shell yosys-config --datdir)/plugins
 DATA_DIR ?= $(DESTDIR)$(shell yosys-config --datdir)
 
