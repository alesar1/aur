[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = nvidia-utils*

[Action]
Description = Re-Applying nvlax
When = PostTransaction
Exec = /bin/sh -c 'nvlax_encode -i /usr/lib/libnvidia-encode.so -o /usr/lib/libnvidia-encode.so; nvlax_fbc -i /usr/lib/libnvidia-fbc.so -o /usr/lib/libnvidia-fbc.so'
NeedsTargets
