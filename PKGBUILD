sha512sums_armv7h=('a3b65da2500776d8506ca71ae8e7bf5c8709cefc0fd6e17eafe48df3fab21225e22117b2aab2fb8ecc018671d17dbf5f84761adf1bdad9d68b08d0763a55a825')
