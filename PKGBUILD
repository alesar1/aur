# Maintainer: dag.robole at gmail dot com

pkgname=fluxbox-styles-mint-x
pkgver=20151201
pkgrel=1
pkgdesc="Fluxbox styles for gtk themes aur/mint-themes and aur/mint-x-icons"
arch=('any')
url="https://github.com/corebob/fluxbox-styles-mint-x"
license=('CCPL')
depends=('')
source=('https://github.com/corebob/fluxbox-styles-mint-x/archive/v0.2.zip')
md5sums=('1c2b36721f6e923641ee1f199d673f8f')

package() {
	mkdir -p "${pkgdir}/usr/share/fluxbox/styles"
	cp -dr --no-preserve=ownership "${srcdir}/fluxbox-styles-mint-x-0.2/mint-x" "${pkgdir}/usr/share/fluxbox/styles/"
	cp -dr --no-preserve=ownership "${srcdir}/fluxbox-styles-mint-x-0.2/mint-x-aqua" "${pkgdir}/usr/share/fluxbox/styles/"
	cp -dr --no-preserve=ownership "${srcdir}/fluxbox-styles-mint-x-0.2/mint-x-blue" "${pkgdir}/usr/share/fluxbox/styles/"
	cp -dr --no-preserve=ownership "${srcdir}/fluxbox-styles-mint-x-0.2/mint-x-brown" "${pkgdir}/usr/share/fluxbox/styles/"
	cp -dr --no-preserve=ownership "${srcdir}/fluxbox-styles-mint-x-0.2/mint-x-gray" "${pkgdir}/usr/share/fluxbox/styles/"
	cp -dr --no-preserve=ownership "${srcdir}/fluxbox-styles-mint-x-0.2/mint-x-orange" "${pkgdir}/usr/share/fluxbox/styles/"
	cp -dr --no-preserve=ownership "${srcdir}/fluxbox-styles-mint-x-0.2/mint-x-pink" "${pkgdir}/usr/share/fluxbox/styles/"
	cp -dr --no-preserve=ownership "${srcdir}/fluxbox-styles-mint-x-0.2/mint-x-purple" "${pkgdir}/usr/share/fluxbox/styles/"
	cp -dr --no-preserve=ownership "${srcdir}/fluxbox-styles-mint-x-0.2/mint-x-red" "${pkgdir}/usr/share/fluxbox/styles/"
	cp -dr --no-preserve=ownership "${srcdir}/fluxbox-styles-mint-x-0.2/mint-x-sand" "${pkgdir}/usr/share/fluxbox/styles/"
	cp -dr --no-preserve=ownership "${srcdir}/fluxbox-styles-mint-x-0.2/mint-x-teal" "${pkgdir}/usr/share/fluxbox/styles/"
}

