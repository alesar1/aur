sha512sums_i686=('daab302c63b8e1c5a4ccfffbe9b3d8f26bb44be09dc530e3633f780c7ac5d96f51142a883a590ddc89cdf5652e3dc9eed04f448953bd48a0ecd172985029e2a2')
