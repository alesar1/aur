pkgname=pyupgrade
pkgver=3.0.0
pkgrel=2
pkgdesc="A tool to automatically upgrade syntax for newer versions of the language"
arch=('any')
url="https://github.com/asottile/pyupgrade"
license=('MIT')
depends=("python" "python-tokenize-rt")
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/p/$pkgname/$pkgname-$pkgver.tar.gz")
b2sums=('7c29c0c20dce0c635da99b26ef8ca0be0b2cc51fbe2ba9fb4f264ad78ea8d9f2ee0810929b72dc95204dafe11e5087c7525717873f108f20df6cab873aeb2230')

build() {
  cd $pkgname-$pkgver
  python3 setup.py build
}

package() {
  cd $pkgname-$pkgver
  python3 setup.py install --root="$pkgdir/" --optimize=1 --skip-build
}

