pkgname=bash-statemgr
pkgver=2017
pkgrel=1
pkgdesc='A Bash module for creating generic state/profile managers.'
arch=(any)
license=(GPL)
url="https://xyne.archlinux.ca/projects/bash-statemgr"
depends=(bash)
optdepends=('zenity: new state creation in Openbox pipe menus generated by obstatemgr')
source=(
  https://xyne.archlinux.ca/projects/bash-statemgr/src/bash-statemgr-2017.tar.xz
  https://xyne.archlinux.ca/projects/bash-statemgr/src/bash-statemgr-2017.tar.xz.sig
)
sha512sums=(
  d23b0aaf39e74e395575f2a658e84d773b82a956089fa61a91e9719d6ba21fb5efcf37f98a75b5ca289adcdda6aae7d7108e1db70ace39e07b69835ce9cf1aef
  016729ab658255b3d3ff5538152725a56b09fc5bb20adf3e3b7d482d1be888bc41a2bf6c8e4d2e39ebcb3abc6d32181b9b09d33d24c74eb812412a59605f1161
)
md5sums=(
  6f09a0881da1cddc82f01314e125dc82
  c837c5934a3afa0437799d88c9a0e6e9
)
validpgpkeys=('EC3CBE7F607D11E663149E811D1F0DC78F173680')

package ()
{
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm644 statemgr "$pkgdir"/usr/share/bash/statemgr
  install -Dm755 obstatemgr "$pkgdir"/usr/bin/obstatemgr
}

