pkgname='jaguar-bin'
pkgver=1.7.8
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('ad2740db3a76e4e2f0853e845b9b3aabc9fe22cc40ea9b4fdad6cded21b56f65')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
