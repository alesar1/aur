pkgname=yaf
pkgver=2.12.2
pkgrel=1
pkgdesc="Processes packet data from pcap dumpfiles as generated by tcpdump or via live captures"
arch=('i686' 'x86_64')
url='https://tools.netsa.cert.org/yaf/'
license=('GPL')
depends=('glib2>=2.6.4' 'libpcap' 'libfixbuf>=2.0.0')
source=("https://tools.netsa.cert.org/releases/${pkgname}-${pkgver}.tar.gz")
sha256sums=('0f3634887b68c695c80472ed17f3a2ebfbf86f841d23a2d48534afc8b637afcb')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}/" install
}
