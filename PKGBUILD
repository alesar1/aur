pkgname='jaguar-bin'
pkgver=1.6.1
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('09b795ab3d4e00c525d1c17429aac1340650965a6420d15aff35599cc020ac7e')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
