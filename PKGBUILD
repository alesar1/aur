pkgname='jaguar-bin'
pkgver=1.7.4
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('34fba7660d561895a9b2d90c58b4458ef4a6b007319b942dafc6437c452332c2')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
