# Maintainer: Mario Finelli <mario at finel dot li>

pkgname=noto-fonts-alpha
pkgver=20170829
_commit=93ed31f86a2308fcd63b4f79c1012d6496cab5fd
pkgrel=1
pkgdesc="Alpha versions of Noto fonts."
arch=(any)
url="https://github.com/googlei18n/noto-fonts-alpha"
license=('custom:OFL')
source=("$pkgname-$_commit.tar.gz::https://github.com/googlei18n/noto-fonts-alpha/archive/$_commit.tar.gz")
sha256sums=('7a84d198ca1dad07a17e6c46d2ae092e1e9395d0a2cf5334ebcedde96bc88f5c')

package() {
  cd "$srcdir/$pkgname-$_commit/"
  install -d -m755 "$pkgdir/usr/share/fonts/noto"
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/noto-fonts-alpha/LICENSE"

  install -Dm644 from-glyphsapp/unhinted/ttf/sans/*.ttf "$pkgdir/usr/share/fonts/noto"
  install -Dm644 from-glyphsapp/unhinted/ttf/serif/*.ttf "$pkgdir/usr/share/fonts/noto"
  install -Dm644 from-glyphsapp/unhinted/variable-ttf/sans/*.ttf "$pkgdir/usr/share/fonts/noto"
  install -Dm644 from-glyphsapp/unhinted/variable-ttf/serif/*.ttf "$pkgdir/usr/share/fonts/noto"

  install -Dm644 from-pipeline/unhinted/ttf/sans/*.ttf "$pkgdir/usr/share/fonts/noto"
  install -Dm644 from-pipeline/unhinted/ttf/serif/*.ttf "$pkgdir/usr/share/fonts/noto"
  install -Dm644 from-pipeline/unhinted/variable-ttf/sans/*.ttf "$pkgdir/usr/share/fonts/noto"
  install -Dm644 from-pipeline/unhinted/variable-ttf/serif/*.ttf "$pkgdir/usr/share/fonts/noto"

  # from-thirdparty is currently provided by noto-fonts in [extra]

  # remove files conflicting with noto-fonts in [extra]
  rm "$pkgdir/usr/share/fonts/noto/NotoSansAdlam-Regular.ttf"
  rm "$pkgdir/usr/share/fonts/noto/NotoSansAdlamUnjoined-Regular.ttf"
  rm "$pkgdir/usr/share/fonts/noto/NotoSansArmenian-Bold.ttf"
