pkgname='jaguar-bin'
pkgver=1.6.3
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('3e0275e5f58ad7b9f8dc9dadaf8b768c49d15d009bec8a9bce6886cdb1d9e877')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
