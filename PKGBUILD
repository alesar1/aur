# Maintainer: dag.robole at gmail dot com

pkgname=fluxbox-styles-mint-x
pkgver=20151206
pkgrel=1
pkgdesc="Fluxbox styles for gtk themes aur/mint-themes and aur/mint-x-icons"
arch=('any')
url="https://github.com/corebob/fluxbox-styles-mint-x"
license=('CCPL')
depends=('')
source=('https://github.com/corebob/fluxbox-styles-mint-x/archive/v0.3.zip')
md5sums=('c3999ec12a0594e39a2ece4e6bbffe1c')

package() {
	mkdir -p "${pkgdir}/usr/share/fluxbox/styles"
	cp -dr --no-preserve=ownership "${srcdir}/fluxbox-styles-mint-x-0.3/mint-x" "${pkgdir}/usr/share/fluxbox/styles/"
	cp -dr --no-preserve=ownership "${srcdir}/fluxbox-styles-mint-x-0.3/mint-x-aqua" "${pkgdir}/usr/share/fluxbox/styles/"
	cp -dr --no-preserve=ownership "${srcdir}/fluxbox-styles-mint-x-0.3/mint-x-blue" "${pkgdir}/usr/share/fluxbox/styles/"
	cp -dr --no-preserve=ownership "${srcdir}/fluxbox-styles-mint-x-0.3/mint-x-brown" "${pkgdir}/usr/share/fluxbox/styles/"
	cp -dr --no-preserve=ownership "${srcdir}/fluxbox-styles-mint-x-0.3/mint-x-gray" "${pkgdir}/usr/share/fluxbox/styles/"
	cp -dr --no-preserve=ownership "${srcdir}/fluxbox-styles-mint-x-0.3/mint-x-orange" "${pkgdir}/usr/share/fluxbox/styles/"
	cp -dr --no-preserve=ownership "${srcdir}/fluxbox-styles-mint-x-0.3/mint-x-pink" "${pkgdir}/usr/share/fluxbox/styles/"
	cp -dr --no-preserve=ownership "${srcdir}/fluxbox-styles-mint-x-0.3/mint-x-purple" "${pkgdir}/usr/share/fluxbox/styles/"
	cp -dr --no-preserve=ownership "${srcdir}/fluxbox-styles-mint-x-0.3/mint-x-red" "${pkgdir}/usr/share/fluxbox/styles/"
	cp -dr --no-preserve=ownership "${srcdir}/fluxbox-styles-mint-x-0.3/mint-x-sand" "${pkgdir}/usr/share/fluxbox/styles/"
	cp -dr --no-preserve=ownership "${srcdir}/fluxbox-styles-mint-x-0.3/mint-x-teal" "${pkgdir}/usr/share/fluxbox/styles/"
}

