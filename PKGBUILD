pkgname='jaguar-bin'
pkgver=1.6.2
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('cdf0ec0f4de747fc7b146be7c5a8735271328b28dca39e734c3a5b8f703bf821')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
