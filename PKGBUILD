package() {
    cd "${srcdir}"
    install -Dm644 "${_pkgname}-${pkgver}.bdf" "${pkgdir}/usr/share/fonts/unifont/unifont.bdf"
    install -Dm644 "${_pkgname}-${pkgver}.hex" "${pkgdir}/usr/share/unifont/unifont.hex"
    install -Dm644 "${_pkgname}-${pkgver}.otf" "${pkgdir}/usr/share/fonts/unifont/unifont.otf"
    install -Dm644 "${_pkgname}-${pkgver}.pcf.gz" "${pkgdir}/usr/share/fonts/misc/unifont.pcf.gz"
    install -Dm644 "${_pkgname}-${pkgver}.ttf" "${pkgdir}/usr/share/fonts/unifont/unifont.ttf"
    install -Dm644 "Unifont-APL8x16-${pkgver}.psf.gz" "${pkgdir}/usr/share/kbd/consolefonts/Unifont-APL8x16.psf.gz"
    install -Dm644 "${_pkgname}_csur-${pkgver}.otf" "${pkgdir}/usr/share/fonts/unifont/unifont_csur.otf"
    install -Dm644 "${_pkgname}_csur-${pkgver}.ttf" "${pkgdir}/usr/share/fonts/unifont/unifont_csur.ttf"
    install -Dm644 "${_pkgname}_jp-${pkgver}.bdf" "${pkgdir}/usr/share/fonts/unifont/unifont_jp.bdf"
    install -Dm644 "${_pkgname}_jp-${pkgver}.hex" "${pkgdir}/usr/share/unifont/unifont_jp.hex"
    install -Dm644 "${_pkgname}_jp-${pkgver}.otf" "${pkgdir}/usr/share/fonts/unifont/unifont_jp.otf"
    install -Dm644 "${_pkgname}_jp-${pkgver}.ttf" "${pkgdir}/usr/share/fonts/unifont/unifont_jp.ttf"
    install -Dm644 "${_pkgname}_jp_sample-${pkgver}.hex" "${pkgdir}/usr/share/unifont/unifont_jp_sample.hex"
    install -Dm644 "${_pkgname}_sample-${pkgver}.hex" "${pkgdir}/usr/share/unifont/unifont_sample.hex"
    install -Dm644 "${_pkgname}_sample-${pkgver}.ttf" "${pkgdir}/usr/share/fonts/unifont/unifont_sample.ttf"
    install -Dm644 "${_pkgname}_upper-${pkgver}.hex" "${pkgdir}/usr/share/unifont/unifont_upper.hex"
    install -Dm644 "${_pkgname}_upper-${pkgver}.otf" "${pkgdir}/usr/share/fonts/unifont/unifont_upper.otf"
    install -Dm644 "${_pkgname}_upper-${pkgver}.ttf" "${pkgdir}/usr/share/fonts/unifont/unifont_upper.ttf"
    install -Dm644 "${_pkgname}_upper_sample-${pkgver}.hex" "${pkgdir}/usr/share/unifont/unifont_upper_sample.hex"
    install -Dm644 "LICENSE.txt" "${pkgdir}/usr/share/licenses/${_pkgname}/LICENSE"
}
