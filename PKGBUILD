pkgname=ruby-$_gemname
pkgver=0.7.5
pkgrel=1
pkgdesc='MessagePack, a binary-based efficient data interchange format.'
arch=(i686 x86_64)
url='http://msgpack.org/'
depends=("ruby")
license=('Apache 2.0')
source=("http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem")
noextract=("$_gemname-$pkgver.gem")
