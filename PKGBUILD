            '4988480b6057b0e36e74cd0c905e1e26767af047b00aebd888ae3fde4aaa6e9c8946c874efc698bdc6bbb6933f27ef074c366450e39cbdcad369f0107abddffd')
sha512sums_i686=('da9c2d9fe0322332c9a92b0f90fb41ecba691072325286dcf47ac6acfa4b60450107c71530da2e5a4cfe7a7ae8d622f4fb668d0be6fdc9dd1771b91e62996b1c')
