# Maintainer: Ben Alex <ben.alex@acegi.com.au>

pkgname=python-pycoral
pkgver=2.0.0
pkgrel=1
pkgdesc='Google Coral Python API'
arch=('any')
url='https://github.com/google-coral/pycoral'
license=('Apache')
depends=('python' 'python-pillow' 'python-tflite-runtime')
makedepends=('python' 'python-pip')

# Generated by pipman (aside from addition of --extra-index-url)
build() {
  pip install --extra-index-url https://google-coral.github.io/py-repo/ --no-deps --target="pycoral" pycoral==2.0.0
}

package() {
  sitepackages=$(python -c "import site; print(site.getsitepackages()[0])")
  mkdir -p $pkgdir/"$sitepackages"
  cp -r $srcdir/pycoral/* $pkgdir/"$sitepackages"
}
