pkgname='jaguar-bin'
pkgver=1.7.11
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('d97503b281e702e99659ba87252e48192874ab55188e997a0b6d03a380f04f6f')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
