sha512sums_armv7h=('1a3cdfc221cc933aee7d7c6438bf206352ed9d125bd5cd7594973ba892c82ae6ac514434ecd5a9303f0465085b468c677b40b9bfc4aa368edf88f5d477d1f0b3')
