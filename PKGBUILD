pkgname=cozy-deps
pkgver=1.0
pkgrel=1
epoch=
pkgdesc="A personal cloud you can hack, host and delete."
arch=('any')
url="https://cozy.io/"
license=('GPL3')
groups=()
depends=('ca-certificates' 'couchdb' 'curl' 'git' 'imagemagick' 'coffee-script'
         'openssl' 'libxml2' 'libxslt' 'sqlite' 'nodejs-lts-bin')
optdepends=('libjpeg-turbo: Needed for the Kresus app'
            'libyaml: Needed for the Kresus app'
            'python2: Needed for the Kresus app (to run weboob)')
provides=("cozy")
conflicts=("cozy")
install=$pkgname.install

package() {
    echo "Nothing to see here" > /dev/null
}
