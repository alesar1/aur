pkgname=yudit-beta
pkgver=2.9.7.beta15
pkgrel=1
pkgdesc="A free Unicode plain-text editor for Unix-like systems - beta version"
arch=('i686' 'x86_64')
url="http://www.yudit.org/"
license=('GPL2')
depends=('libx11' 'gcc-libs')
conflicts=('yudit')
provides=('yudit')
optdepends=('hunspell: spell checking')
source=("http://yudit.org/download/betas/${pkgname%-beta}-$pkgver.tar.gz")
md5sums=('e9a8e0990ee886a8175aa824d1ae8672')
sha1sums=('303808045fdac5da8987979f74e85b6913d98ec3')
sha256sums=('1e4b1a4785fc26add82731cf8db9a2005a250bc26eca86081b05e9fed605c437')
validpgpkeys=()

build() {
  cd "${pkgname%-beta}-$pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${pkgname%-beta}-$pkgver"
  make DESTDIR="$pkgdir/" install
}

