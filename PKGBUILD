build() {
    for f in *%20*.otf; do
        mv "$f" "${f//\%20/ }"
    done
}

package() {
    install -d ${pkgdir}/usr/share/fonts/OTF/
    install -d ${pkgdir}/usr/share/licenses/${pkgname}
    install -Dm644 ${srcdir}/*.otf ${pkgdir}/usr/share/fonts/OTF
    install -Dm644 ${srcdir}/LICENSE ${pkgdir}/usr/share/licenses/${pkgname}
}
