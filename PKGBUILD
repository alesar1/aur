_pkgname=tmdbsimple
pkgname=python-$_pkgname
pkgver=2.7.0
pkgrel=1
pkgdesc="A wrapper for The Movie Database API v3. "
arch=('any')
url="https://github.com/celiao/tmdbsimple"
license=('GPLv3')
depends=('python'
         'python-requests')

source=("https://github.com/celiao/tmdbsimple/archive/${pkgver}.tar.gz")

package() {
  cd "$srcdir/$_pkgname-$pkgver"
  python setup.py install --root="$pkgdir/" --optimize=1
}

sha256sums=('47288dc9f382724505d8cb14b47d11bb6ae19828c638a9c4616945ab2a2ccd11')
