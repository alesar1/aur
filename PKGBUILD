#Maintainer: mcgpapu@gmail.com

pkgname="ttf-tr2n"
pkgdesc="tr2n ttf"
pkgver=1.3
pkgrel=1
arch=('any')
url="https://www.ffonts.net/TR2N.font"
source=("https://www.ffonts.net/TR2N.font.zip")
license=('OFL')
depends=('fontconfig' 'xorg-mkfontscale')
makedepends=('unzip')
provides=('ttf-font')

#signature for zip file containing font
#generated by updpkgsums
md5sums=('58485d87d9cafeeb505ba82118137516')

package() {
install -Dm644 -v "$srcdir/Tr2n.ttf" -t "$pkgdir/usr/share/fonts/TTF/"

install -Dm644 "$srcdir/License.txt" "$pkgdir/usr/share/licenses/$pkgname"

#shove README in there
install -Dm644 "$srcdir/Readme.txt" "$pkgdir/usr/share/licenses/$pkgname"
}
