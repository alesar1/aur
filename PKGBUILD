prepare() {
	cd "$pkgname"
}

build() {
	cd "$pkgname"
}

check() {
	cd "$pkgname"
}

package() {
	cd "$pkgname"
	install -Dm755 pomobar.py "$pkgdir/usr/share/polybar/scripts/pomobar.py"
}
