sha512sums_i686=('721852c1e02aa54ffbd1fb6f9b5b98cce57742a0666f5f3912d6d37982eed02e2bcb88f16faf8424a92d07f65c67d240dcc98f294ad61f8ceb11f452f0037a4e')
