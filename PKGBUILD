pkgname=sidef
pkgver=2.30
pkgrel=1
pkgdesc="A modern object-oriented programming language."
arch=('any')
url="https://github.com/trizen/${pkgname}"
license=('GPLv3')

makedepends=()
depends=('perl>=5.22.0' 'perl-data-dump' 'perl-math-gmpq' 'perl-math-gmpz' 'perl-math-mpfr>=3.29' 'perl-math-mpc')

source=("https://github.com/trizen/${pkgname}/archive/${pkgver}.tar.gz")
sha256sums=('448499c0a5a9325f2ec0f5742ef695e013e8585aa5350f7b6639bc1d7ed9f43d')

package() {
    cd "$pkgname-$pkgver"

    perl Makefile.PL DESTDIR="$pkgdir" INSTALLDIRS=vendor
    make &&
    make test &&
    make install

    #cd "share/sidef"
