_cranname=stringr
_cranver=1.3.1
pkgname=r-stringr
pkgver=${_cranver//[:-]/.}
pkgrel=1
pkgdesc='A consistent, simple and easy to use set of wrappers around the stringi package'
license=('GPL2')
url="https://cran.r-project.org/web/packages/${_cranname}/index.html"
arch=('x86_64')
depends=('r>=3.1'
         'r-cran-glue>=1.2.0'
         'r-magrittr'
         'r-stringi>=1.1.7')
optdepends=('r-covr'
            'r-htmltools'
            'r-htmlwidgets'
            'r-knitr'
            'r-rmarkdown'
            'r-testthat')
source=("https://cran.r-project.org/src/contrib/${_cranname}_${_cranver}.tar.gz")
md5sums=('2b52caf5b5873afaf5e5a48a6513805f')

package() {
    mkdir -p ${pkgdir}/usr/lib/R/library
    cd "${srcdir}"
    R CMD INSTALL ${_cranname} -l ${pkgdir}/usr/lib/R/library
}
