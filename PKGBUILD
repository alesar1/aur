  rm "$pkgdir/usr/share/fonts/noto/NotoSansCuneiform-Regular.ttf"
  rm "$pkgdir/usr/share/fonts/noto/NotoSansCypriot-Regular.ttf"
  rm "$pkgdir/usr/share/fonts/noto/NotoSansDeseret-Regular.ttf"
  rm "$pkgdir/usr/share/fonts/noto/NotoSansDevanagari-Bold.ttf"
  rm "$pkgdir/usr/share/fonts/noto/NotoSansDevanagari-Regular.ttf"
  rm "$pkgdir/usr/share/fonts/noto/NotoSansDevanagariUI-Bold.ttf"
  rm "$pkgdir/usr/share/fonts/noto/NotoSansDevanagariUI-Regular.ttf"
  rm "$pkgdir/usr/share/fonts/noto/NotoSansEgyptianHieroglyphs-Regular.ttf"
  rm "$pkgdir/usr/share/fonts/noto/NotoSansEthiopic-Bold.ttf"
  rm "$pkgdir/usr/share/fonts/noto/NotoSansEthiopic-Regular.ttf"
  rm "$pkgdir/usr/share/fonts/noto/NotoSansGeorgian-Bold.ttf"
  rm "$pkgdir/usr/share/fonts/noto/NotoSansGeorgian-Regular.ttf"
