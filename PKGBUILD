pkgname='jaguar-bin'
pkgver=1.7.12
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('c1363ab92b4c6fe62abd0d7de318c4d8cea25c4ab186c1fb3a82211c2bcebb70')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
