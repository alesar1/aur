# Original Submission: Bob Finch <w9ya@qrparci.net>

pkgname=cty
pkgver=3211
pkgrel=1
pkgdesc="The package represents databases of entities (countries), prefixes and callsigns
	that are used by amateur (ham) radio logging software - CONTESTING VERSION."
arch=('any')
provides=('cty')
conflicts=('bigcty')
url="http://www.country-files.com/cty"
license=('GPL')
source=(${url}/download/$pkgver/${pkgname}-$pkgver.zip)

package() {
	mkdir -p  $pkgdir/usr/share/cty/old

	cd $srcdir

	chmod 644 * old/*
	cp -R *.{cty,dat} old $pkgdir/usr/share/cty
}
md5sums=('a8140d31ba75accf56cffba1e97e7edd')
sha256sums=('3b67848772e7e935bcc701e94bd13347970497f0540bb3b897b11094c73b636e')
