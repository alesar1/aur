pkgname='ros-melodic-roslz4'
pkgver='1.14.3'
_pkgver_patch=0
arch=('any')
pkgrel=1
license=('BSD')

ros_makedepends=(ros-melodic-catkin)
makedepends=('cmake' 'ros-build-tools'
  ${ros_makedepends[@]}
  lz4)

ros_depends=()
depends=(${ros_depends[@]}
  lz4)

