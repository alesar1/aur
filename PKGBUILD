pkgname=()
source=()
_url=https://github.com/hawkeye116477/Waterfox/raw/$pkgver/browser/extensions

for _lang in "${_languages[@]}"; 
do
  _locale=${_lang%% *}
  _pkgname=waterfox-slim-i18n-${_locale,,}

  pkgname+=($_pkgname)
  source+=("waterfox-slim-i18n-$pkgver-$_locale.xpi::${_url}/langpack-${_locale}@firefox.mozilla.org.xpi")
  eval "package_$_pkgname() {
    _package $_lang
  }"
done

# Don't extract anything
noextract=(${source[@]%%::*})

_package() {
  pkgdesc="$2 language pack for Waterfox"
  depends=("waterfox-slim-bin>=$pkgver")
  install -Dm644 waterfox-slim-i18n-$pkgver-$1.xpi \
    "$pkgdir/opt/waterfox/browser/features/langpack-$1@firefox.mozilla.org.xpi"
}
