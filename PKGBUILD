noextract=(${source[@]##*/})e

package() {
  extdir=${pkgdir}/usr/lib32/bin32-firefox/extensions
  mkdir -p $extdir
  cd ${srcdir} install -d $extdir
  for i in *.xpi; do
    install -m644 $i $extdir
  done
}
