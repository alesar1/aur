pkgname=semantik
pkgver=1.2.3
pkgrel=2
pkgdesc="mindmapping-like tool for document generation (reports, thesis, etc)"
arch=('x86_64')
url='https://waf.io/semantik.html'
license=('GPL3')
depends=('python' 'qt5-webengine'  'kdelibs4support' 'python-pygments')
makedepends=('shared-mime-info' 'desktop-file-utils' 'waf')
optdepends=('minted: syntax highlighting support in documents generated by LaTeX')
source=("https://waf.io/${pkgname}-${pkgver}.tar.bz2")
sha256sums=('bfce23dacfd815af8726feddb1f887a22fbaae2429c355115e8639c2bdc59c50')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
# This package ships an old version of waf (2.0.14), don't use it since
# it doesn't work with python 3.8.0.
# ./waf configure clean build
# Use the one provided by Arch (2.0.18)
  waf configure clean build
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
# ./waf install --destdir=${pkgdir} --nomimes --noldconfig --nogtkicons
  waf install --destdir=${pkgdir} --nomimes --noldconfig --nogtkicons
}
