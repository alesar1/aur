package_python-powerline-shell() {
  depends=("python" "python-pip")
  mkdir -p $pkgdir/usr/lib/python3.6/site-packages/
  cp -r $srcdir/powerline-shell/* $pkgdir/usr/lib/python3.6/site-packages/
}

package_python2-powerline-shell() {
  depends=("python2" "python2-pip")
  mkdir -p $pkgdir/usr/lib/python2.7/site-packages/
  cp -r $srcdir/powerline-shell/* $pkgdir/usr/lib/python2.7/site-packages/
}
