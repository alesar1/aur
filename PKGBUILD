pkgname='jaguar-bin'
pkgver=1.6.4
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('1ad69651ad229d14ac912f8eaaac23d4ba3a7d39ef1a92c640a57d88733bae9c')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
