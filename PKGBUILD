pkgname='jaguar-bin'
pkgver=1.6.5
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('b9b852cf489837dc872388f5ff18723869729b8ccd432377cd40d728fb3cd0bd')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
