pkgname=yaf
pkgver=2.10.0
pkgrel=1
pkgdesc="Yet Another Flowmeter. Processes packet data from pcap dumpfiles as generated by tcpdump or via live captures from an interface"
arch=('i686' 'x86_64')
url='https://tools.netsa.cert.org/yaf/'
license=('GPL')
depends=('glib2>=2.6.4' 'libpcap' 'libfixbuf>=2.0.0')
source=("https://tools.netsa.cert.org/releases/${pkgname}-${pkgver}.tar.gz")
sha256sums=('ed13a5d9f4cbbe6e82e2ee894cf3c324b2bb209df7eb95f2be10619bbf13d805')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}/" install
}
