pkgname='jaguar-bin'
pkgver=1.6.6
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('9e26cc031cd3956f216f3bb2797191d49b2042ca6685339855e305bed8af5e67')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
