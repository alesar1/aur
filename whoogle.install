post_install() {
    mkdir -p /opt/whoogle-search/app/static
    chown -R whoogle.whoogle /opt/whoogle-search/app/static
    echo ""
    echo "Enable the SystemD unit and visit localhost:5000 to start searching!"
    echo ""
}

post_upgrade() {
    chown -R whoogle.whoogle /opt/whoogle-search/app/static/
}
