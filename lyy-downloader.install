post_install() {
  # Update icon cache for gtk users
  gtk-update-icon-cache -q -t -f usr/share/icons/hicolor &> /dev/null
}

post_upgrade() {
  gtk-update-icon-cache -q -t -f usr/share/icons/hicolor &> /dev/null
}

post_remove() {
  gtk-update-icon-cache -q -t -f usr/share/icons/hicolor &> /dev/null
}
