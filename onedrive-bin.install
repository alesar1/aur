post_install() {
  ln -sf /usr/lib/libphobos2-ldc-shared.so /usr/lib/libphobos2-ldc-shared.so.82
  ln -sf /usr/lib/libdruntime-ldc-shared.so /usr/lib/libdruntime-ldc-shared.so.82
}

post_upgrade() {
  post_install $1
}

pre_remove() {
  rm -fr /usr/lib/libphobos2-ldc-shared.so.82
  rm -fr /usr/lib/libdruntime-ldc-shared.so.82
}
