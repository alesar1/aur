[Trigger]
Type = Package
Operation = Install
Operation = Upgrade
Operation = Remove
Target = systemd

[Trigger]
Type = File
Operation = Install
Operation = Upgrade
Target = boot/vmlinuz-linux
Target = usr/lib/initcpio/*

[Action]
Description = Backup boot partition...
When = PreTransaction
Exec = /usr/share/libalpm/scripts/backup-boot-partition pre
AbortOnFail
