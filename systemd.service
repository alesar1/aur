[Unit]
Description=lightspeed-ingest Server
After=network.target lightspeed-webrtc.service

[Service]
User=lightspeed-ingest
Group=lightspeed-ingest
WorkingDirectory=/var/lib/lightspeed-ingest
ExecStart=/usr/bin/lightspeed-ingest
EnvironmentFile=/etc/conf.d/lightspeed-ingest
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
