post_install() {
    echo "  Enable systemd service for this session to work i.e:"
    echo "      # systemctl enable gamescope@$USER.service"
}

post_upgrade() {
    echo "  Systemd template changed to be user based. Will open on tty1"
    echo "  Enable systemd service for this session to work i.e:"
    echo "      # systemctl enable gamescope@$USER.service"
}
