diff --git a/Makefile b/Makefile
index 23d91f0..b69cb62 100644
--- a/Makefile
+++ b/Makefile
@@ -29,10 +29,12 @@ clean:
 	rm -rf $(builddir)/
 	
 install:
+	rm loggedfs.1.gz > /dev/null 2>&1 || true
 	gzip --keep loggedfs.1
-	cp loggedfs.1.gz /usr/share/man/man1/
-	cp loggedfs /usr/bin/
-	cp loggedfs.xml /etc/
+	mkdir -p "$(DESTDIR)/usr/share/man/man1" "$(DESTDIR)/usr/bin" "$(DESTDIR)/etc"
+	cp loggedfs.1.gz "$(DESTDIR)/usr/share/man/man1/"
+	cp loggedfs "$(DESTDIR)/usr/bin/"
+	cp loggedfs.xml "$(DESTDIR)/etc/"
 
 
