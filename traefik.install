post_install() {
  getent group traefik >/dev/null || groupadd -r traefik
  getent passwd traefik >/dev/null || useradd -g traefik -r -M -s /bin/false traefik
  chown traefik:traefik /var/log/traefik
  setcap 'cap_net_bind_service=+ep' /bin/traefik
}

post_upgrade() {
  post_install
}

post_remove() {
  userdel traefik
}
