post_install () {
  VBoxManage extpack install --accept-license=56be48f923303c8cababb0bb4c478284b688ed23f16d775d729b89a2e8e5f9eb "/usr/share/virtualbox/extensions/Oracle_VM_VirtualBox_Extension_Pack-${1%%-*}.vbox-extpack" >/dev/null
}

pre_upgrade() {
  post_remove "$@"
}

post_upgrade() {
  post_install "$@"
}

post_remove() {
  VBoxManage extpack uninstall 'Oracle VM VirtualBox Extension Pack' >/dev/null
}

