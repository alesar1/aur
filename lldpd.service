[Unit]
Description=LLDP daemon
Documentation=man:lldpd(8)
Requires=snmpd.service
After=snmpd.service network.target

[Service]
Type=notify
NotifyAccess=main
ExecStart=/usr/bin/lldpd -x -c -f -s -e -l -M 2
ExecReload=/usr/bin/lldpcli -c /etc/lldpd.conf -c /etc/lldpd.d
Restart=on-failure

[Install]
WantedBy=multi-user.target
