#!/bin/sh
if [ -z "$1" ]
    then
	/usr/bin/echo "caas-app username@domain.tld [password]"
	exit 1
fi
DATAHOME=$XDG_DATA_HOME
if [ -z "$XDG_DATA_HOME"]
    then
        DATAHOME=$HOME/.local/share
fi
PROGDATA=$DATAHOME/caas-app/
if [ ! -d "$PROGDATA" ]
    then
        mkdir -p "$PROGDATA"
fi
cd $PROGDATA
exec /usr/bin/java -jar '/usr/share/java/caas-app/caas-app.jar' "$@"
