post_install()
{
    gtk-update-icon-cache -q -f usr/share/icons/hicolor
    update-desktop-database -q
    glib-compile-schemas usr/share/glib-2.0/schemas
}

post_upgrade()
{
    post_install
}

post_remove()
{
    gtk-update-icon-cache -q -f usr/share/icons/hicolor
    update-desktop-database -q
    glib-compile-schemas usr/share/glib-2.0/schemas
}
