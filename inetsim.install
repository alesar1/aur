post_install() {
  # add inetsim group
  if [ ! `grep inetsim /etc/group` ]; then
    groupadd -g 16 inetsim &>/dev/null
  fi

  # run inetsim setup script
  cd /opt/inetsim
  ./setup.sh

}

post_upgrade() {
  post_install $1
}

pre_remove() {
  # remove users & groups
  groupdel inetsim &> /dev/null
}
