post_install() {
    # enable search of extra driver if it wasn't enable before
    grep --quiet 'search extradrivers' /etc/depmod.d/* \
    || echo "search extradrivers" \
    | sudo tee -a /etc/depmod.d/00-extra.conf \
    > /dev/null
    depmod
}

post_upgrade() {
    post_install
}

post_remove() {
    depmod
    echo "You can now remove 'search extradrivers' line"
    echo "or even entire /etc/modprobe.d/00-extra.conf"
    echo "if you don't need this anymore"
}
