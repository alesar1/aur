   target_include_directories(surelog PUBLIC ${Python3_INCLUDE_DIRS}) # Keep this at the end
@@ -415,12 +405,9 @@ if(MSVC OR WIN32)
 endif()
 
 target_link_libraries(surelog-bin PUBLIC surelog)
