Distribution packages want dynamic builds.
---
 monero-core.pro | 4 +++-
 1 file changed, 3 insertions(+), 1 deletion(-)

diff --git a/monero-core.pro b/monero-core.pro
index 4b2bbf2..057b336 100644
--- a/monero-core.pro
+++ b/monero-core.pro
@@ -69,8 +69,10 @@ win32 {
 }
 
 linux {
+    CONFIG(static) {
+        LIBS+= -Wl,-Bstatic
+    }
     LIBS+= \
-        -Wl,-Bstatic \
         -lboost_serialization \
         -lboost_thread \
         -lboost_system \
