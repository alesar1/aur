[Unit]
Description=Publish %I as alias for %H.local via mdns
Wants=avahi-daemon.service
StartLimitIntervalSec=60
StartLimitBurst=10

[Service]
Type=simple
ExecStart=/bin/bash -c "/usr/bin/avahi-publish -f -a -R remoteit.local $(ip addr show |grep 'inet\s' |grep -v '127.0.0.1' |awk '{print $2}' |awk -F "/" '{print $1}')"
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
