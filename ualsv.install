post_install() {
	if [ -n "$SUDO_USER" ] || [ -n "$U_HOME" ]; then
		echo " >>> Initializing the ualsv database"
		ualsv --pacman init
	else
		echo -e "\n >>> pacman was not executed via sudo. Manually do 'ualsv --pacman init'\n"
	fi
}
post_upgrade() {
	if [ -n "$SUDO_USER" ] || [ -n "$U_HOME" ]; then
		echo " >>> Updating the ualsv database"
		ualsv --pacman hook
	else
		echo -e "\n >>> pacman was not executed via sudo. Manually do 'ualsv --pacman hook'\n"
	fi
}
