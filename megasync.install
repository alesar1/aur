# megasync.install


post_install() {
	update-desktop-database -q
	gtk-update-icon-cache -q -t -f usr/share/icons/hicolor
	ln -s /usr/lib/libcryptopp.so /usr/lib/libcryptopp-5.6.2.so.0
}

post_upgrade() {
	gtk-update-icon-cache -q -t -f usr/share/icons/hicolor
}

post_remove() {
	gtk-update-icon-cache -q -t -f usr/share/icons/hicolor
	rm /usr/lib/libcryptopp-5.6.2.so.0
}
