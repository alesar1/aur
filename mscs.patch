-		sh $$script; \
-	done; true;
-
-clean:
-	if which systemctl; then \
-		systemctl -f disable mscs.service; \
-		rm -f $(MSCS_SERVICE); \
-	else \
-		update-rc.d mscs remove; \
-		rm -f $(MSCS_INIT_D); \
-	fi
