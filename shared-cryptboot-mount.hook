[Trigger]
Operation = Install
Operation = Upgrade
Type = Path
Target = boot/*
Target = usr/lib/modules/*/vmlinuz
Target = usr/lib/initcpio/*

[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = linux

[Action]
Description = Mounting /boot ...
When = PreTransaction
Exec = /usr/bin/mount /boot
AbortOnFail
