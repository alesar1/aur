[Unit]
Description=Mediawiki Mathoid Service
Documentation=https://www.mediawiki.org/wiki/mathoid
Wants=local-fs.target network.target
After=local-fs.target network.target

[Install]
WantedBy=multi-user.target

[Service]
Type=simple
User=mathoid
Group=nobody
WorkingDirectory=/usr/lib/node_modules/mathoid/
ExecStart=/usr/bin/node /usr/lib/node_modules/mathoid/server.js
KillMode=process
Restart=on-success
Nice=10
OOMScoreAdjust=900
PrivateTmp=true
StandardOutput=syslog
