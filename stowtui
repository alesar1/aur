#!/usr/bin/env python3
import sys
import os

from stowtui.stowApp import StowApp

try:
    StowTui = StowApp()
    StowTui.run()

except KeyboardInterrupt:
    os.system('reset')
    os.system('stty sane')
    try:
        sys.exit(0)
    except SystemExit:    # pragma: no cover
        os._exit(0)
