# vim:set ts=2 sw=2 et:

# Colors
note() {
    printf "${BLUE}==>${ALL_OFF}${BOLD} NOTE:${ALL_OFF} ${1}\n"
}

ALL_OFF="$(tput sgr0)"
BOLD="$(tput bold)"
BLUE="${BOLD}$(tput setaf 4)"
GREEN="${BOLD}$(tput setaf 2)"

post_install() {
  echo
  note "Additional information is in the directory /usr/share/doc/m17n-cu-git/";
}
 
post_upgrade() {
  echo
  note "Additional information is in the directory /usr/share/doc/m17n-cu-git/";
}

