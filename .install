post_install() {
    /usr/bin/update-desktop-database -q /usr/share/applications > /dev/null
    /usr/bin/update-mime-database -n /usr/share/mime > /dev/null
}

post_remove() {
    /usr/bin/update-desktop-database -q /usr/share/applications > /dev/null
    /usr/bin/update-mime-database -n /usr/share/mime > /dev/null
}