  /opt/brother/Printers/dcpt520w/inf/setupPrintcapij dcpt520w -e
  
  # cupswrapper
  /opt/brother/Printers/dcpt520w/cupswrapper/cupswrapperdcpt520w -e
}

op=$1
shift

$op "$@"

