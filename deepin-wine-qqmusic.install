info() {
    echo -e "\033[0;34m============================提示/INFO==============================="
    echo -e "* 反馈问题(Report issue):"
    echo -e "  https://github.com/Lapis-Apple/deepin-wine-qqmusic-arch/issues"
    echo -e "* 切换到标准 Wine(Switch to original wine):"
    echo -e "  https://github.com/Lapis-Apple/deepin-wine-qqmusic-arch"
    echo -e "* 安装包下载(Installation package download):"
    echo -e "  https://github.com/Lapis-Apple/deepin-wine-qqmusic-arch/releases"
    echo -e "====================================================================\033[0m"
}
post_install() {
    info
}
post_upgrade() {
    find /home -maxdepth 2 -name ".deepinwine" -exec rm -f \{\}/Deepin-QQMusic/reinstalled \;
    info
}
pre_remove() {
    echo "deleting the QQMusic bottle..."
    find /home -maxdepth 2 -name ".deepinwine" -exec rm -rf \{\}/Deepin-QQMusic/ \;
}
