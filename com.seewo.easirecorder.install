post_install() {
	gtk-update-icon-cache -q -t -f usr/share/icons/hicolor
	update-desktop-database -q
	echo '正在重新加载 udev 规则'
	udevadm trigger
}

post_upgrade() {
	post_install
}

post_remove() {
	gtk-update-icon-cache -q -t -f usr/share/icons/hicolor
	update-desktop-database -q
	echo '正在重新加载 udev 规则'
	udevadm trigger
}
