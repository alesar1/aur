[Unit]
Description=PlexRequests
After=network.target

[Service]
User=plexrequests 
Type=simple
WorkingDirectory=/opt/plexrequests
ExecStart=/usr/bin/meteor
KillMode=process
Restart=always
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=plexrequests
User=plexrequests

[Install]
WantedBy=multi-user.target