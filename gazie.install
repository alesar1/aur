post_install() {
	chown -R http:http /srv/http/gazie
	chmod -R go+w /srv/http/gazie/data/files
	chmod -R go+w /srv/http/gazie/library/tcpdf/cache
	echo "  Gazie installed in /srv/http/gazie.
    Please enable .htaccess files.
    Create a mysql database and user and
	edit /srv/http/gazie/config/config/gconfig.php accordingly.
 	Now visit localhost/gazie page."
}
