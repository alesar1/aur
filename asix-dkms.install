# arg 1:  the new package version
post_install() {
    dkms install asix/${1%%-*}
}

# arg 1:  the new package version
# arg 2:  the old package version
pre_upgrade() {
    pre_remove ${2%%-*}
}

# arg 1:  the new package version
# arg 2:  the old package version
post_upgrade() {
    post_install ${1%%-*}
}

# arg 1:  the old package version
pre_remove() {
    dkms remove asix/${1%%-*} --all
}
