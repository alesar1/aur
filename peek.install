post_install() {
	xdg-icon-resource forceupdate --theme hicolor
	update-desktop-database -q
	glib-compile-schemas /usr/share/glib-2.0/schemas
}

post_upgrade() {
	post_install
}

post_remove() {
	xdg-icon-resource forceupdate --theme hicolor
	update-desktop-database -q
	glib-compile-schemas /usr/share/glib-2.0/schemas
}
