#!/usr/bin/ash

run_hook() {
	modprobe -a -d dm-crypt >/dev/null 2>&1
    IFS=: read cryptdev cryptname <<EOF
$cryptdevice
EOF
	gpg --decrypt /rootkey.gpg | cryptsetup open "$cryptdev" "$cryptname" -d -
    rm -rf /.gnupg
    /bin/killall gpg-agent scdaemon pcscd &> /dev/null
}

# vim: set ft=sh ts=4 sw=4 et:
