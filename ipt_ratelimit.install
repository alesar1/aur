post_install() {
  linux_custom="ARCH"
  linux_localversion=""
  kernver="`pacman -Ql linux${linux_localversion} | gawk 'match($0, /^(.*)modules\/([0-9.-]+-(.*)-'${linux_custom}')\/$/, a) {print a[2]}'`"
  echo -e "Probe modules"
  depmod ${kernver}
}

post_remove() {
  post_install
}

post_upgrade() {
  post_install
}
