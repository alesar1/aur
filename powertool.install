post_install() {
    if ! grep /usr/bin/powertool /etc/sudoers 2>&1 > /dev/null; then
        printf "\n%%sudo ALL=(ALL) NOPASSWD: /usr/bin/powertool\n" >> /etc/sudoers
    fi
}

post_remove() {
    sed -i 'N;N;s/\n*%sudo ALL=(ALL) NOPASSWD: \/usr\/bin\/powertool//' /etc/sudoers
}

