post_install() {
  echo "Link installed Nephrite gtk-4.0 theme to config folder (replace Nephrite-Dark with chosen theme variant):"
  echo ""
  echo "mkdir -p ~/.config/gtk-4.0"
  echo "ln -sf /usr/share/themes/Nephrite-Dark/gtk-4.0/{assets,gtk.css,gtk-dark.css} ~/.config/gtk-4.0/"
  echo ""
}

post_upgrade() {
   post_install
}
