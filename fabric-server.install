_server_root="/srv/fabric-1.16.5"


post_install() {
	echo "The world data is stored under ${_server_root} and the server runs as fabric-1-16-5 user to increase security."
	echo "Use the fabricd-1.16.5 script under /usr/bin/ to start, stop or backup the server."
	echo "Adjust the configuration file under /etc/conf.d/fabric-1.16.5 to your liking."
	echo "For the server to start you have to accept the EULA in ${_server_root}/eula.txt !"
	echo "The EULA file is generated after the first server start."
}

post_remove() {
	[ -d "$_server_root" ] && echo "Game saves in ${_server_root} were kept on your system."
	echo "The fabric-1-16-5 user was preserved on your system."
}
