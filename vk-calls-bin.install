post_install() {
	xdg-icon-resource forceupdate --theme hicolor &> /dev/null
	update-mime-database usr/share/mime &> /dev/null || true
	update-desktop-database -q
}

post_upgrade() {
	post_install
}

post_remove() {
	xdg-icon-resource forceupdate --theme hicolor &> /dev/null
	ldconfig
	update-desktop-database -q
}
