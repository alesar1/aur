post_upgrade() {
    setcap CAP_NET_BIND_SERVICE=+eip /usr/bin/minisatip
    systemd-sysusers
    echo "The git sources got switch to 0.5 branch to test experimental futures."
    echo "If You wish to use version 0.3x feel free to install 'minisatip' package."
}

post_install() {
    post_upgrade
}

post_remove() {
    getent passwd minisatip &>/dev/null && userdel minisatip >/dev/null
    getent group minisatip &>/dev/null && groupdel minisatip >/dev/null
    return 0
}
