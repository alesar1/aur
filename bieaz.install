#!/bin/sh
pre_upgrade() {
	if [ -f /etc/bieaz.cfg ]; then
		epoch=$(date +%s)
		mv /etc/bieaz.cfg /etc/bieaz.cfg.${epoch}.old
		echo "moved old config file to /etc/bieaz.cfg.${epoch}.old"
	fi
};
post_upgrade() {
	export ZPOOL_VDEV_NAME_PATH=YES
	bieaz update-menu -g
}

post_install() {
	export ZPOOL_VDEV_NAME_PATH=YES
	bieaz update-menu -g
}
