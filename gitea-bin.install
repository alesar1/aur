pre_install() {
  # create the required user account
  useradd --system -m --shell /bin/nologin -c "Account for gitea" --home /var/lib/gitea/repos git || echo "Git user already exists"
}

post_install() {
  chown -R git:git /var/lib/gitea
  chown root:git /etc/gitea
  systemctl daemon-reload
}

post_upgrade() {
  post_install $1
}
