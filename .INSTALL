post_install() {
    echo "deleting the DingTalk bottle..."
    find /home -maxdepth 2 -name ".deepinwine" -exec rm -rf \{\}/Deepin-DingTalk/ \;
}
post_upgrade() {
    echo "deleting the DingTalk bottle..."
    find /home -maxdepth 2 -name ".deepinwine" -exec rm -rf \{\}Deepin-DingTalk/ \;
}
pre_remove() {
    echo "deleting the DingTalk bottle..."
    find /home -maxdepth 2 -name ".deepinwine" -exec rm -rf \{\}/Deepin-DingTalk/ \;
}
