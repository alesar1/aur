 
#!/bin/sh

post_install() {
    /opt/deepinwine/apps/Deepin-QQLight/run.sh
    find /home -maxdepth 2 -name ".deepinwine" -exec sed -i "s|deepin-wine|deepin-wine5|g" \{\}/Deepin-QQLight/drive_c/deepin/EnvInit.sh \;
}

post_upgrade() {
    /opt/deepinwine/apps/Deepin-QQLight/run.sh
    find /home -maxdepth 2 -name ".deepinwine" -exec sed -i "s|deepin-wine|deepin-wine5|g" \{\}/Deepin-QQLight/drive_c/deepin/EnvInit.sh \;
}

pre_remove() {
    echo "deleting the DingTalk bottle..."
    find /home -maxdepth 2 -name ".deepinwine" -exec rm -rf \{\}/Deepin-QQLight/ \;
}
