post_install() {

  ECHOLEN=$(echo -e|awk '{print length($0)}')
  if [ ${ECHOLEN} = '0' ]
  then
    ECHO='echo -e'
  else
  ECHO='echo'
  fi
  $ECHO "\033[36m**********************************************************************************************\033[0m"
  $ECHO "\033[36m*  /usr/bin/iotbot has beeen installed as /usr/bin/pyiotbot as it conflicts with iotbot binary *\033[0m"
  $ECHO "\033[36m**********************************************************************************************\033[0m"
}

