post_install() {
	echo "Change your Android Studio Android SDK directory to \$HOME/.AndroidStudio_sdk" >&2
}

post_upgrade() {
	echo "Paths have changed. Move your local copy from"
	echo "\$HOME/.AndroidStudio2.*/sdk_local to \$HOME/.AndroidStudio_sdk_local"
	echo "and change your Android Studio Android SDK directory from"
	echo "\$HOME/.AndroidStudio2.*/sdk to \$HOME/.AndroidStudio_sdk"
}
