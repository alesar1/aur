Subject: [PATCH] install.sh: make installation directories before trying to
 copy files to them

---
 install.sh | 10 ++++++++++
 1 file changed, 10 insertions(+)

diff --git a/install.sh b/install.sh
index 72f6163..e84c645 100755
--- a/install.sh
+++ b/install.sh
@@ -17,6 +17,16 @@ fi
 BINDIR=$PREFIX/bin
 LIBDIR=$PREFIX/share/herdtools7
 
+if ! [ -d $BINDIR ]
+then
+	mkdir -p $BINDIR
+fi
+
+if ! [ -d $LIBDIR ]
+then
+	mkdir -p $LIBDIR
+fi
+
 cpbin () {
   SUB=$1
   EXECS="$2"
