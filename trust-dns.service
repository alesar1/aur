[Unit]
Description=Trust-dns: authoritative DNS server
Wants=network-online.target
After=network-online.target

[Service]
User=trust-dns
DynamicUser=yes
ExecStart=/usr/bin/trust-dns -c /etc/trust-dns/trust-dns.toml
AmbientCapabilities=CAP_NET_BIND_SERVICE
CapabilityBoundingSet=CAP_NET_BIND_SERVICE
Restart=on-failure
RestartSec=1

[Install]
WantedBy=multi-user.target
