diff --git a/main.lua b/main.lua
index 4ecd4f4a..5585a7cd 100644
--- a/main.lua
+++ b/main.lua
@@ -1,8 +1,11 @@
 local currentPath = debug.getinfo(1, 'S').source:sub(2)
