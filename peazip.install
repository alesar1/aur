post_install() {
    ln -sf $HOME/.peazip/peazip /usr/bin/peazip
    ln -sf $HOME/.peazip/res/pea /usr/bin/pea
    ln -sf $HOME/.peazip/res/pealauncher /usr/bin/pealauncher
    update-desktop-database -q
}

post_upgrade() {
    update-desktop-database -q
}

postmove() {
    update-desktop-database -q
}

post_remove() {
    rm -f /usr/bin/peazip
    rm -f /usr/bin/pea
    rm -f /usr/bin/pealauncher
    update-desktop-database -q
}
