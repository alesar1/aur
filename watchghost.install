post_install() {
    systemd-sysusers watchghost.conf
    systemctl daemon-reload
}

post_upgrade() {
    systemd-sysusers watchghost.conf
    systemctl daemon-reload
    systemctl is-active watchghost
    active=$?
    if [ $active -eq 0 ] ; then
      systemctl restart watchghost
    fi
}

pre_remove() {
    systemctl stop watchghost.service;
    systemctl disable watchghost.service;
}

post_remove() {
    systemctl daemon-reload
}

