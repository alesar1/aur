post_install() {
    echo "NOTICE: If you using Arc-Dark GTK theme, you can fix colors for menubar."
    echo "Tool mogrify is part of imagemagick package."
    echo "sudo sed -i 's|2f343f|383c4a|g' /usr/share/themes/Arc-Dark/gtk-2.0/menubar-toolbar/menubar-toolbar-dark.rc"
    echo "sudo sed -i 's|2f343f|383c4a|g' /usr/share/themes/Arc-Dark/gtk-3.0/gtk.css"
    echo "sudo mogrify +level-colors \"#383c4a\" /usr/share/themes/Arc-Dark/gtk-2.0/menubar-toolbar/menubar-dark.png"
}

post_upgrade() {
    post_install $1
}
 
