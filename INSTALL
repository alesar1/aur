post_install() {
	systemctl enable lightdm.service > /dev/null
	systemctl enable NetworkManager.service > /dev/null

	sed -i "s/^\(OnlyShowIn=.*\)$/\1Awesome;/g" /etc/xdg/autostart/*.desktop
	echo "background=/usr/share/kana-p/login-wallpaper.jpg" >> /etc/lightdm/lightdm-gtk-greeter.conf
}

pre_upgrade() {
	pre_remove
}

post_upgrade() {
	post_install
}

pre_remove()
{
	systemctl disable gdm.service > /dev/null
	systemctl disable NetworkManager.service > /dev/null

	sed -i "s/^\(OnlyShowIn=.*\)Awesome;\(.*\)$/\1\2/g" /etc/xdg/autostart/*.desktop
	sed -i 's#^background=/usr/share/kana-p/login-wallpaper.jpg$##g' /etc/lightdm/lightdm-gtk-greeter.conf
}
