post_upgrade() {
    update-desktop-database -q
    gtk-update-icon-cache -q -t -f usr/share/icons/hicolor
}

post_install() {
    echo "You will need the original game assets to play this game, see https://github.com/MustaphaTR/sole-survivor/wiki for details\n"
    post_upgrade
}

post_remove() {
    post_upgrade
}
