{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchDatasources": ["github-releases"],
      "matchPackageNames": ["DeFiCh/app"],
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^PKGBUILD$"],
      "matchStrings": ["pkgver=(?<currentValue>.*) # (?<datasource>.*?)/(?<depName>.*?)\\s"]
    }
  ],
  "postUpgradeTasks": {
    "commands": ["updpkgsums"],
    "executionMode": "update"
  }
}
