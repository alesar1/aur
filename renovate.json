{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": ["config:base"],

  "assignees": ["languitar"],
  "reviewers": ["languitar"],

  "regexManagers": [
    {
      "fileMatch": ["^PKGBUILD$"],
      "matchStrings": [
        "^pkgver=(?<currentValue>.*?)\n$"
      ],
      "depNameTemplate": "jgraph/drawio-desktop",
      "datasourceTemplate": "github-releases"
    }
  ]
}
